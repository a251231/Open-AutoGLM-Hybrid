<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/command_center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addCommandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_command" />

        <Button
            android:id="@+id/refreshCommandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/refresh" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commandList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/emptyCommandText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empty_command_hint"
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
</LinearLayout>
